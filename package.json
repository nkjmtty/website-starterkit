{
  "name": "website-starter-kit",
  "version": "1.0.0",
  "description": "get by on with a npm-script",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/nkjmtty/website-starterkit.git",
    "type": "git"
  },
  "author": "N_Tetsuya",
  "license": "MIT",
  "scripts": {
    "1--": "================================",
    "start": "npm-run-all -p phpBiltinServer browserSync watch",
    "//start_D2": "php -S 127.0.0.1:8080 -t ./dst/ ../-router.php | npm run start:browserSync",
    "//start_D1": "chcp 65001 && nodist 10.8.0 && npm config set scripts-prepend-node-path true && npm run start:server | npm run watch",
    "//start:server": "npm run start:phpBiltinServer && npm run start:browserSync",
    "//start:phpBiltinServer": "start php -S 127.0.0.1:8080 -t ./dst/ ../-router.php",
    "//start:browserSync": "browser-sync start --proxy 127.0.0.1:8080 --files \"./dst/**/*\"",
    "2--": "================================",
    "restart": "",
    "stop": "",
    "//test": "",
    "3--": "================================",
    "setup": "nodist 10.8.0 && npm config set scripts-prepend-node-path true",
    "setup:win": "chcp 65001&&npm run setup",
    "4--": "================================",
    "phpBiltinServer": "php -S 127.0.0.1:8080 -t ./dst/ ../-router.php",
    "browserSync": "browser-sync start --config ./config/browser-sync.config.js",
    "//browserSync_D1": "browser-sync start --proxy 127.0.0.1:8080 --files \"./dst/**/*.*\"",
    "//browserSync_D0": "browser-sync init",
    "5--": "================================",
    "postcss": "postcss src/css/**/[!_]*.css --base ./src/ --dir dst --config ./config/postcss.config.js",
    "postcss:development": "SET NODE_ENV=development&&npm run postcss -- --map dst/css/",
    "postcss:staging": "SET NODE_ENV=staging&&npm run postcss --",
    "postcss:production": "SET NODE_ENV=production&&npm run postcss -- --no-map",
    "6--": "================================",
    "typescript": "tsc -p ./config/typescript.config.json",
    "test_OK_2": "npm run typescript -- --watch",
    "test_NG_1_TS6053": "tsc ./src/ts/**/*.ts --sourceMap",
    "test_OK_1": "tsc ./src/ts/HelloWorld.ts --sourceMap",
    "test_NG_1": "tsc -- -p ./config/typescript.config.json",
    "tsc_OK_1": "tsc",
    "test_D2": "npm run tsc_OK_1 -- -p ./config/typescript.config.json",
    "7--": "================================",
    "watch_NG_1": "npm-run-all -p watch:css",
    "watch": "npm-run-all -p watch:css watch:typescript",
    "watch:css": "npm run postcss:development -- --watch",
    "watch:typescript": "npm run typescript -- -watch",
    "8--": "================================",
    "test": "imagemin dst/img/**/* --out-dir dst/img --plugin=webp",
    "test_imagemin_OK_2": "imagemin-manager",
    "test_imagemin_NG_3": "imagemin-manager --config ./config/imagemin.config.js",
    "test_imagemin_NG_2": "imagemin-manager",
    "test_imagemin_NG_1": "imagemin src/img/**/* --out-dir dst/img --plugin=webp --quality 10",
    "test_imagemin_OK_1": "imagemin src/img/**/* --out-dir dst/img --plugin=webp",
    "test_imagemin_OK_0": "imagemin src/images/* -o dist/images"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.1",
    "browser-sync": "^2.24.6",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.0.5",
    "imagemin-cli": "^3.0.0",
    "imagemin-webp": "^4.1.0",
    "module": "^1.2.5",
    "npm-run-all": "^4.1.3",
    "postcss-calc": "^6.0.1",
    "postcss-cli": "^6.0.0",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^7.0.0",
    "postcss-import": "^12.0.0",
    "postcss-nesting": "^6.0.0",
    "postcss-selector-matches": "^3.0.1",
    "typescript": "^3.0.1",
    "watchify": "^3.11.0"
  }
}
